{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "lib": [
      "dom", "scripthost", "es5", "es2015.promise",
      "es2015.core", "es2015.iterable", "es2015.generator"
    ],
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ]
}
